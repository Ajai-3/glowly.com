                </div>
            </div>

         

                <div class="redeem-box">
                    <h5 class="section-title">
                        <i class="fas fa-ticket-alt"></i>
                        Have a Referral Code?
                    </h5>
                    <div class="redeem-input-group">
                        <input 
                            type="text" 
                            id="referralCodeInput" 
                            placeholder="Enter referral code" 
                            maxlength="10"
                            pattern="[A-Za-z0-9]+"
                        >
                        <button class="redeem-btn" onclick="redeemReferralCode()">
                            <i class="fas fa-check"></i> Apply
                        </button>
                    </div>
                    <div id="referralError" class="error-message"></div>
                </div>

                <div class="referral-box">
                    <h5 class="mb-3" style="color: #fff;">Your Unique Referral Link</h5>
                    <div class="referral-input-group">
                        <input type="text" id="referralLink" value="https://glowly.com/ref/XXXX" readonly/>
                        <button class="copy-btn-share-and-earn" onclick="copyReferralLink()">
                            <i class="fas fa-copy"></i> Copy
                        </button>
                        <button class="share-btn" onclick="shareReferralLink()">
                            <i class="fas fa-share-alt"></i> Share with Friends
