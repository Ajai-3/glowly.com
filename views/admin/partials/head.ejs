<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Title and Favicon -->
    <title>Glowly.com: Admin</title>
    <link rel="icon" href="/assets/logo/glowly.com.logo.png" type="image/png">
    
    <!-- CSS Libraries -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/izitoast/dist/css/iziToast.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- JavaScript Libraries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
</head>
<body class="admin-container">
    <div class="sidebar">
        <h2 class="mx-4 mb-3 mt-2">Glowly</h2>

        <!-- Dashboard Link -->
        <a href="/admin/dashboard" class="<%= currentPath === '/admin/dashboard' ? 'active' : '' %>">
          <i class="fa-solid fa-tachometer-alt"></i>&nbsp;&nbsp;&nbsp; Dashboard
        </a>
        
        <!--Top Items -->
        <a href="/admin/top-items" class="<%= currentPath === '/admin/top-items' ? 'active' : '' %>">
          <i class="fa fa-chart-line"></i></i>&nbsp;&nbsp;&nbsp;Top items
        </a>
        
        <!-- Users Link -->
        <a href="/admin/users" class="<%= currentPath === '/admin/users' ? 'active' : '' %>">
          <i class="fa-solid fa-users"></i>&nbsp;&nbsp;&nbsp;Users
        </a>
      
        <!-- Products Link -->
        <a href="/admin/products" class="<%= currentPath.startsWith('/admin/products') || currentPath === '/admin/add-products' || currentPath.match(/^\/admin\/edit-product\/[a-f0-9]{24}$/) ? 'active' : '' %>">
          <i class="fa-solid fa-boxes"></i>&nbsp;&nbsp;&nbsp;Products
        </a>
        
        <!-- Brands Link -->
        <a href="/admin/brands" class="<%= currentPath === '/admin/brands' || currentPath === '/admin/add-new-brand' || currentPath.match(/^\/admin\/edit-brand\/[a-f0-9]{24}$/) ? 'active' : '' %>">
          <i class="fa-solid fa-building"></i>&nbsp;&nbsp;&nbsp; Brands
        </a>
      
        <!-- Category Link -->
        <a href="/admin/category" class="<%= currentPath.startsWith('/admin/category') || currentPath === '/admin/add-category' || currentPath.match(/^\/admin\/add-offer\/[a-f0-9]{24}$/) ? 'active' : '' %>">
          <i class="fa-solid fa-list"></i>&nbsp;&nbsp;&nbsp;Category
        </a>
      
        <!-- Coupons Link -->
        <a href="/admin/coupons" class="<%= currentPath === '/admin/coupons' ? 'active' : '' %>">
          <i class="fa-solid fa-tags"></i>&nbsp;&nbsp;&nbsp;Coupons
        </a> 
      
        <!-- Order Lists Link -->
        <a href="/admin/orderlists" class="<%= currentPath === '/admin/orderlists' ? 'active' : '' %>">
          <i class="fa-solid fa-clipboard-list"></i>&nbsp;&nbsp;&nbsp;&nbsp;Order Lists
        </a>
      
        
      
        <!-- Banner Management Link -->
        <a href="/admin/banner-management" class="<%= currentPath === '/admin/banner-management' ? 'active' : '' %>">
          <i class="fa-solid fa-image"></i>&nbsp;&nbsp;&nbsp;Banner Management
        </a>
      
        <!-- Settings Link -->
        <a href="/admin/settings" class="<%= currentPath === '/admin/settings' ? 'active' : '' %>">
          <i class="fa-solid fa-gear"></i>&nbsp;&nbsp;&nbsp;Settings
        </a>
      
        <!-- Logout Link -->
        <a href="/admin/admin-logout" class="<%= currentPath === '/admin/admin-logout' ? 'active' : '' %>">
          <i class="fa-solid fa-power-off"></i>&nbsp;&nbsp;&nbsp;Logout
        </a>
      </div>
    
    

