<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Title and Favicon -->
    <title>Glowly.com: Admin</title>
    <link rel="icon" href="/assets/logo/glowly.com.logo.png" type="image/png">
    
    <!-- CSS Libraries -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/izitoast/dist/css/iziToast.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- JavaScript Libraries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
</head>
<body class="admin-container">
    <div class="sidebar">
        <h2 class="mx-4 mb-3 mt-2">Glowly</h2>
        <a href="/dashboard" class="<%= currentPath === '/dashboard' ? 'active' : '' %>"><i class="fa-solid fa-tachometer-alt"></i>&nbsp;&nbsp;
            Dashboard</a>
        <a href="/users" class="<%= currentPath === '/users' ? 'active' : '' %>"><i class="fa-solid fa-users"></i>&nbsp; Users</a>
        <a href="/products" class="<%= currentPath.startsWith('/products') || currentPath === '/add-products' || currentPath.match(/^\/edit-product\/[a-f0-9]{24}$/) ? 'active' : '' %>"><i class="fa-solid fa-boxes"></i>&nbsp;&nbsp;Products</a>
        <a href="/brands" class="<%= currentPath === '/brands' || currentPath === '/add-new-brand' || currentPath.match(/^\/edit-brand\/[a-f0-9]{24}$/) ? 'active' : '' %>"> <i class="fa-solid fa-building"></i>&nbsp;&nbsp; Brands</a>
        <a href="/category" class="<%= currentPath.startsWith('/category') || currentPath === '/add-category' || currentPath.match(/^\/add-offer\/[a-f0-9]{24}$/) ? 'active' : '' %>"><i class="fa-solid fa-list"></i>&nbsp; Category</a>
        <a href="/coupons" class="<%= currentPath === '/coupons' ? 'active' : '' %>"><i class="fa-solid fa-tags"></i>&nbsp; Coupons</a> 
        <a href="/orderlists" class="<%= currentPath === '/orderlists' ? 'active' : '' %>"><i class="fa-solid fa-clipboard-list"></i>&nbsp;&nbsp; Order Lists</a>
        <a href="/sales-report" class="<%= currentPath === '/sales-report' ? 'active' : '' %>"><i class="fa-solid fa-chart-bar"></i>&nbsp; Sales Report</a>
        <a href="/banner-management" class="<%= currentPath === '/banner-management' ? 'active' : '' %>"><i class="fa-solid fa-image"></i>&nbsp; Banner Management</a>
        <a href="/settings" class="<%= currentPath === '/settings' ? 'active' : '' %>"><i class="fa-solid fa-gear"></i>&nbsp;  Settings</a>
        <a href="/admin-logout" class="<%= currentPath === '/admin-logout' ? 'active' : '' %>"><i class="fa-solid fa-power-off"></i>&nbsp; Logout</a>
    </div>
    

